{{#input}}
	<input 
		class="input {{#isInvalid}}input--invalid{{/isInvalid}} {{class}} {{styleModifier}}" 
		id="{{# id }}{{ id }}{{/ id }}{{^ id }}{{ name }}{{/ id }}" 
		name="{{name}}" 
		type="{{type}}" 
		value="{{value}}" 
		placeholder="{{placeholder}}" 
		{{#isRequired}}required{{/isRequired}} 
		{{#isDisabled}}disabled{{/isDisabled}}
		{{#attributes}}{{name}}="{{value}}"{{/attributes}} />
{{/input}}

